<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/divider"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/shimmer_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/shimmer_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/shimmer_title"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/shimmer_rounded_background"
            android:backgroundTint="@color/shimmer_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shimmer_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/shimmer_message_line1"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shimmer_rounded_background"
            android:backgroundTint="@color/shimmer_color"
            app:layout_constraintEnd_toEndOf="@+id/shimmer_title"
            app:layout_constraintStart_toStartOf="@+id/shimmer_title"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_title" />

        <View
            android:id="@+id/shimmer_message_line2"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shimmer_rounded_background"
            android:backgroundTint="@color/shimmer_color"
            app:layout_constraintEnd_toEndOf="@+id/shimmer_message_line1"
            app:layout_constraintStart_toStartOf="@+id/shimmer_message_line1"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_message_line1"
            app:layout_constraintWidth_percent="0.7" />

        <View
            android:id="@+id/shimmer_time"
            android:layout_width="80dp"
            android:layout_height="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shimmer_rounded_background"
            android:backgroundTint="@color/shimmer_color"
            app:layout_constraintStart_toStartOf="@+id/shimmer_message_line2"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_message_line2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView> 